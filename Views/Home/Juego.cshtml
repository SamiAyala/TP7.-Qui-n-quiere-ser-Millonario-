<div class="row justify-content-center mt-5">
    <div class="col-4 cont-preg-resp cont-resp w-25 rounded-3 mx-5 p-2" onclick="ChequearRespuesta('@ViewBag.listResp[0].opcionRespuesta')">
        <div class="preg-resp fs-5" id="respuesta1">@ViewBag.listResp[0].textoRespuesta</div>
